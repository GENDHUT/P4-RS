<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Poli</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Edit Poli</h2>
      
      <form action="/poli/<%= poli.id_poli %>/edit" method="POST">
        <!-- Nama Poli -->
        <div class="mb-3">
          <label for="nama_poli" class="form-label">Nama Poli</label>
          <input type="text" class="form-control" id="nama_poli" name="nama_poli" value="<%= poli.nama_poli %>" required>
        </div>
        
        <!-- Nama Pegawai -->
        <div class="mb-3">
          <label for="id_peg" class="form-label">Nama Pegawai</label>
          <select id="id_peg" name="id_peg" class="form-select" required>
            <% pegawais.forEach(pegawai => { %>
              <option value="<%= pegawai.id_pegawai %>" <%= pegawai.id_pegawai === poli.id_peg ? 'selected' : '' %> >
                <%= pegawai.nama_pegawai %>
              </option>
            <% }) %>
          </select>
        </div>
        
        <!-- Button Update -->
        <button type="submit" class="btn btn-primary w-100">Update</button>
      </form>
      
      <!-- Kembali ke Daftar Poli -->
      <a href="/poli" class="btn btn-secondary mt-3 w-100">Kembali ke Daftar Poli</a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
