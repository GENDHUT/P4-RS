<!-- views/poli/detail.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Detail Poli</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Detail Poli</h2>
      
      <div class="mb-3">
        <strong>Nama Poli:</strong> <%= poli.nama_poli %>
      </div>
      
      <div class="mb-3">
        <strong>Pegawai:</strong> <%= poli.nama_pegawai %>
      </div>
      
      <h4>Dokter dalam Poli Ini:</h4>
      <% if (poli.dokters && poli.dokters.length > 0) { %>
        <ul class="list-group">
          <% poli.dokters.forEach(function(dokter) { %>
            <li class="list-group-item">
              <%= dokter.nama_dokter %>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>Tidak ada dokter yang terdaftar di poli ini.</p>
      <% } %>
      
      <a href="/poli" class="btn btn-secondary mt-3">Kembali</a>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
