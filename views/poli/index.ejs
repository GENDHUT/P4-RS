<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Poli</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">MyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/pasien">Pasien</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dokter">Dokter</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/poli">Poli</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reservasi">Reservasi</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/antri">Antri</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Daftar Poli</h2>
      
      <% if (poli && poli.length > 0) { %>
        <table class="table table-bordered table-striped">
          <thead class="table-dark text-center">
            <tr>
              <th>ID Poli</th>
              <th>Nama Poli</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% poli.forEach(function(poliItem) { %>
              <tr>
                <td class="text-center"><%= poliItem.id_poli %></td>
                <td><%= poliItem.nama_poli %></td>
                <td class="text-center">
                  <a href="/poli/<%= poliItem.id_poli %>" class="btn btn-info btn-sm">Detail</a>
                  <a href="/poli/<%= poliItem.id_poli %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/poli/<%= poliItem.id_poli %>/delete" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div class="alert alert-warning text-center">Tidak ada data poli yang tersedia.</div>
      <% } %>

      <a href="/poli/new" class="btn btn-success mt-3 w-100">Tambah Poli Baru</a>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
