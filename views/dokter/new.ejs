<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tambah Dokter</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Tambah Dokter</h2>
    <form action="/dokter" method="POST">
      <div class="mb-3">
        <label for="nama_dokter" class="form-label">Nama Dokter</label>
        <input type="text" class="form-control" id="nama_dokter" name="nama_dokter" required>
      </div>
      <div class="mb-3">
        <label for="id_poli" class="form-label">Poli</label>
        <select class="form-select" id="id_poli" name="id_poli" required>
          <% polies.forEach(poli => { %>
            <option value="<%= poli.id_poli %>"><%= poli.nama_poli %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="id_pegawai" class="form-label">Status Pegawai</label>
        <select class="form-select" id="id_pegawai" name="id_pegawai" required>
          <% pegawais.forEach(pegawai => { %>
            <option value="<%= pegawai.id_pegawai %>" <% if(pegawai.status_pegawai === 'Aktif') { %> selected <% } %>><%= pegawai.nama_pegawai %> - <%= pegawai.status_pegawai %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="status_dokter" class="form-label">Status Dokter</label>
        <select class="form-select" id="status_dokter" name="status_dokter" required>
          <option value="Telah ditangani">Telah ditangani</option>
          <option value="Belum ditangani">Belum ditangani</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Tambah Dokter</button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
