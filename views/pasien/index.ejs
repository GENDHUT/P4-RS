<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Data Pasien</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">MyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/pasien">Pasien</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dokter">Dokter</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/poli">Poli</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/reservasi">Reservasi</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/antri">Antri</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Data Pasien</h2>
      <div class="d-flex justify-content-end mb-3">
        <a href="/pasien/new" class="btn btn-success">+ Tambah Pasien</a>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
          <thead class="table-dark text-center">
            <tr>
              <th>No RM</th>
              <th>KTP</th>
              <th>Nama Pasien</th>
              <th>Tanggal Lahir</th>
              <th>Alamat</th>
              <th>Tinggi</th>
              <th>Berat</th>
              <th>Ibu Kandung</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pasien.forEach(function(p) { %>
              <tr>
                <td class="text-center"><%= p.no_rm %></td>
                <td class="text-center"><%= p.ktp %></td>
                <td><%= p.nama_pasien %></td>
                <td class="text-center"><%= p.tgl_lahir.toISOString().substring(0,10) %></td>
                <td><%= p.alamat %></td>
                <td class="text-center"><%= p.tinggi %></td>
                <td class="text-center"><%= p.berat %></td>
                <td><%= p.ibu_kandung %></td>
                <td class="text-center">
                  <a href="/pasien/<%= p.no_rm %>" class="btn btn-info btn-sm">Detail</a>
                  <a href="/pasien/<%= p.no_rm %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/pasien/<%= p.no_rm %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Yakin ingin menghapus data ini?')">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
