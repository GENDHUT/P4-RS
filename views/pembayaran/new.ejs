<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tambah Pembayaran</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Tambah Pembayaran</h1>
    <form action="/pembayaran" method="POST">
        <div class="mb-3">
          <label for="no_antrian" class="form-label">No Antrian</label>
          <select class="form-control" id="no_antrian" name="no_antrian" required>
            <option value="">Pilih No Antrian</option>
            <% if (antriList && antriList.length > 0) { %>
              <% antriList.forEach(function(antrian) { %>
                <option value="<%= antrian.no_antrian %>"><%= antrian.no_antrian %></option>
              <% }); %>
            <% } else { %>
              <option disabled>No antrian tersedia</option>
            <% } %>
          </select>
        </div>
        <div class="mb-3">
          <label for="tipe_pembayaran" class="form-label">Tipe Pembayaran</label>
          <input type="text" class="form-control" id="tipe_pembayaran" name="tipe_pembayaran" required>
        </div>
        <div class="mb-3">
          <label for="nama_instansi" class="form-label">Nama Instansi</label>
          <input type="text" class="form-control" id="nama_instansi" name="nama_instansi">
        </div>
        <button type="submit" class="btn btn-primary">Simpan</button>
        <a href="/pembayaran" class="btn btn-secondary ms-2">Kembali</a>
      </form>
      
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
