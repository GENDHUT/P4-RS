<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Pegawai</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Daftar Pegawai</h2>
      <div class="d-flex justify-content-end mb-3">
        <a href="/pegawai/new" class="btn btn-success">+ Tambah Pegawai</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Nama Pegawai</th>
              <th>Status Pegawai</th>
              <th>Gaji</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pegawais.forEach(function(pegawai) { %>
              <tr>
                <td><%= pegawai.id_pegawai %></td>
                <td><%= pegawai.nama_pegawai %></td>
                <td><%= pegawai.status_pegawai %></td>
                <td>Rp <%= pegawai.gaji.toLocaleString('id-ID') %></td>
                <td>
                  <a href="/pegawai/<%= pegawai.id_pegawai %>" class="btn btn-info btn-sm">Detail</a>
                  <a href="/pegawai/<%= pegawai.id_pegawai %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/pegawai/<%= pegawai.id_pegawai %>/delete" method="POST" 
                        class="d-inline" onsubmit="return confirm('Yakin ingin menghapus?')">
                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
