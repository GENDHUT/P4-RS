<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Detail Pegawai</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Detail Pegawai</h2>
      <% if (pegawai) { %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>ID:</strong> <%= pegawai.id_pegawai %></li>
          <li class="list-group-item"><strong>Nama:</strong> <%= pegawai.nama_pegawai %></li>
          <li class="list-group-item"><strong>Status Pegawai:</strong> <%= pegawai.status_pegawai %></li>
          <li class="list-group-item"><strong>Gaji:</strong> Rp <%= pegawai.gaji.toLocaleString('id-ID') %></li>
        </ul>
        <% if (pegawai.dokters && pegawai.dokters.length > 0) { %>
          <div class="mt-4">
            <h4>Data Dokter yang Terhubung:</h4>
            <ul class="list-group">
              <% pegawai.dokters.forEach(function(dokter) { %>
                <li class="list-group-item">
                  <strong>ID Dokter:</strong> <%= dokter.id_dokter %> |
                  <strong>Nama Dokter:</strong> <%= dokter.nama_dokter %> |
                  <strong>Status Dokter:</strong> <%= dokter.status_dokter %>
                </li>
              <% }); %>
            </ul>
          </div>
        <% } else { %>
          <div class="alert alert-info mt-3 text-center">
            Tidak ada data dokter yang terhubung.
          </div>
        <% } %>
      <% } else { %>
        <div class="alert alert-danger text-center">Data tidak ditemukan.</div>
      <% } %>
      <a href="/" class="btn btn-secondary mt-3 w-100">Kembali ke Daftar Pegawai</a>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
